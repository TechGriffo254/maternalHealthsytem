# Database Configuration
MONGO_URI=mongodb://localhost:27017/mhaas
# OR for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mhaas

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_LIFETIME=1d

# Server Configuration
PORT=5000
CLIENT_URL=http://localhost:3000

# Email Configuration (for appointment reminders)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# SMS Configuration (Africa's Talking - for SMS reminders)
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key
AFRICAS_TALKING_USERNAME=your_africas_talking_username

# Optional: Twilio (alternative SMS provider)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional: AI Integration (for health tips generation)
GEMINI_API_KEY=your_google_gemini_api_key
